<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/textViewBookingHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booking History"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <!-- Scrollable Booking List Container -->
    <ScrollView         android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewBookingHistory"
        android:layout_marginTop="24dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/bookingListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_margin="8dp"/>
    </ScrollView>

    <!-- Download Ticket Button -->
    <Button
        android:id="@+id/buttonDownloadTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download Ticket"
        android:textColor="@android:color/white"
        android:backgroundTint="#3F51B5"
        android:elevation="4dp"
        android:layout_below="@id/scrollView"
        android:layout_marginTop="24dp"
        android:padding="12dp"/> </RelativeLayout>